@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skosapnl: <http://nlbegrip.nl/def/skosapnl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

skosapnl:Concept
    a sh:NodeShape ;
    sh:targetClass skos:Concept ;
    rdfs:label "Begrip"@nl ;
    rdfs:comment "Vorm voor begrip."@nl ;
    sh:property [ sh:path skos:prefLabel ; sh:datatype xsd:string ; sh:minCount 1 ] ;
    sh:property [ sh:path skos:definition ; sh:datatype xsd:string ] ;
    sh:property [ sh:path skos:altLabel ; sh:datatype xsd:string ] ;
    sh:property [ sh:path skos:note ; sh:datatype xsd:string ] ;
    sh:property [ sh:path skos:inScheme ; sh:class skos:ConceptScheme ] .

skosapnl:Collection
    a sh:NodeShape ;
    sh:targetClass skos:Collection ;
    rdfs:label "Collectie"@nl ;
    sh:property [ sh:path skos:member ; sh:class skos:Concept ] ;
    sh:property [ sh:path skos:prefLabel ; sh:datatype xsd:string ; sh:minCount 1 ] .

skosapnl:ConceptScheme
    a sh:NodeShape ;
    sh:targetClass skos:ConceptScheme ;
    rdfs:label "Conceptschema"@nl ;
    sh:property [ sh:path dct:title ; sh:datatype xsd:string ; sh:minCount 1 ] ;
    sh:property [ sh:path dct:identifier ; sh:datatype xsd:string ] ;
    sh:property [ sh:path dct:issued ; sh:datatype xsd:date ] ;
    sh:property [ sh:path dct:language ; sh:datatype xsd:string ] .

skosapnl:Relation
    a sh:NodeShape ;
    sh:targetClass skos:Concept ;
    rdfs:label "Relatie"@nl ;
    sh:property [ sh:path skos:broader ; sh:class skos:Concept ] ;
    sh:property [ sh:path skos:narrower ; sh:class skos:Concept ] .

skosapnl:SourceDocument
    a sh:NodeShape ;
    sh:targetObjectsOf dct:source ;
    rdfs:label "Brondocument"@nl ;
    rdfs:comment "Dit brondocument beschrijft de herkomst van het begrip."@nl ;
    sh:property [ sh:path dct:title ; sh:datatype xsd:string ; sh:minCount 1 ] ;
    sh:property [ sh:path dct:identifier ; sh:datatype xsd:string ] ;
    sh:property [ sh:path dct:issued ; sh:datatype xsd:date ] ;
    sh:property [ sh:path dct:language ; sh:datatype xsd:string ] .
